@model IEnumerable<jobs_offer.Models.job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Search</h2>



    <div class="panel panel-default" style="padding:15px">
        <h1 class="panel-heading">نتائج البحث</h1>
        <div class="row">
            @foreach (var subItem in Model)
            {

                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:80px; height:380px;">
                    <img src="~/Uploads/@subItem.jobimage" />
                    <h1>@Html.DisplayFor(Model => subItem.jobtitle)</h1>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(Model => subItem.jobcontent).ToString()))</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { jobid = subItem.id }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>

