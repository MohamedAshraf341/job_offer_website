@model IEnumerable<jobs_offer.Models.category>
@*@Model IEnumerable<jobs_offer.Models.category>*@
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="jumbotron alert alert-info">
        <h3>مرحبا بكم في موقع التوظيف</h3>
        <p >مرحبا بك ايها العميل يمكنك نشر وظيفه اذاكنت ناشرا ويمكنك التقدم الي وظيفه اداكنت باحثا</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
    </div>

@foreach (var item in Model)
{
    <div class="panel panel-info" >
        <div class="panel-heading"><h1>@Html.DisplayFor(Model => item.categoryname)</h1></div>
        <div class="row panel-body">
            <h5>@Html.DisplayFor(Model => item.categorydescription)</h5>

            @foreach (var subItem in item.jobs)
            {

                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:80px; min-height:380px;">
                    <img src="~/Uploads/@subItem.jobimage" />
                    <h1>@Html.DisplayFor(Model => subItem.jobtitle)</h1>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(Model => subItem.jobcontent).ToString()))</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { jobid = subItem.id },new {@class="btn btn-primary" })
                </div>
            }
        </div>
    </div>
}

    
